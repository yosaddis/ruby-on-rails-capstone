<div class='navbar navbar-login'>
  <%= stylesheet_link_tag "categories" %>
  <%= link_to 'Back', splash_screen_path, class: 'back-link' %>
  <h2 style="color: white; background-color: transparent;">CATEGORIES</h2>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "sign_out text_white" %>
</div>

<div class="categories">
  <% if @categories.length == 0 %>
    <p class="empty_data">No category yet. Add a new one!!!</p>
  <% else %>
    <% @categories.each do |category| %>
      <%= link_to category_expense_index_path category do %>
        <%= render category %>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="new_category_btn text_white">
  <%= link_to "Add Category", new_category_path, class: "fcc-btn" %>
</div>
</section>