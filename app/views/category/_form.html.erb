<div class="forms_section">
  <%= bootstrap_form_with(model: category, url: category_index_path) do |form| %>
    <% if category.errors.any? %>
      <div>
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
          <% category.errors.each do |message| %>
            <li><%= message.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.text_field :name, label: "Category Name" %>
    </div>

    <div>
      <%= form.text_field :icon, placeholder: "Enter the Icon link" %>
    </div>

    <div>
      <%= form.submit "Create Category", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>