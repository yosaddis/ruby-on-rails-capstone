<div id="<%= dom_id category %>" class="category">
  <img src="<%= category.icon %>" class="category-icon">
  <div class='name-container'>
    <p style='font-size: 1.2rem;'><%= category.name %></p>
    <p style='color: gray;'><%= category.created_at.strftime("%Y %b %d") %></p>
  </div>
  <p style='font-weight: bold;'>$<%= category.total_amount %></p>
</div>